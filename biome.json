{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "ignore": [".astro"]
  },
  "formatter": {
    "indentStyle": "space",
    "attributePosition": "auto",
    "formatWithErrors": true
  },
  "organizeImports": { "enabled": true },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnknownProperty": "off"
      }
    }
  },
  "json": {
    "formatter": {
      "enabled": true
    },
    "parser": {
      "allowTrailingCommas": true,
      "allowComments": true
    }
  }
}
