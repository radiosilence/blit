{
  "$schema": "https://next.biomejs.dev/schemas/2.0.0-beta/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": ["!**/*.astro"]
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "off"
      }
    }
  },
  "formatter": {
    "indentStyle": "space",
    "attributePosition": "auto",
    "formatWithErrors": true
  },
  "linter": {
    "enabled": true,
    "rules": { "recommended": true }
  },
  "json": {
    "formatter": {
      "enabled": true
    },
    "parser": {
      "allowTrailingCommas": true,
      "allowComments": true
    }
  }
}
