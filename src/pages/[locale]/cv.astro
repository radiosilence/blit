---
import CV from "@/components/cv.mdx";
import Logo from "@/components/logo.astro";
import Default from "@/layouts/default.astro";
import { i18n } from "@lingui/core";
import { supportedLocales } from "@/i18n";

export async function getStaticPaths() {
    return supportedLocales
        .filter((locale) => locale !== "en-GB") // Default locale handled by /cv.astro
        .map((locale) => ({ params: { locale } }));
}
---

<Default>
    <section class="flex items-center flex-col mbe-24 px-4 lg:px-0">
        <article class="prose prose-sm">
            <a href={`${i18n.locale !== "en-GB" ? `/${i18n.locale}` : "/"}`}>
                <Logo width={128} className="mbs-12 mbe-16" />
            </a>
            <CV />
        </article>
    </section>
</Default>
